if(isset($_POST["addPrecondition"]))
{
	$flagPre=0;
	$defaultTab= "precondition";
	if($cond1 || $cond2 || $cond3 || $cond4 || $cond5)
	{
		$condArray= array();
		$lenCond= 0;
		if($cond1){ array_push($condArray, $cond1); $lenCond++; }
		if($cond2){ array_push($condArray, $cond2); $lenCond++; }
		if($cond3){ array_push($condArray, $cond3); $lenCond++; }
		if($cond4){ array_push($condArray, $cond4); $lenCond++; }
		if($cond5){ array_push($condArray, $cond5); $lenCond++; }
		for($i=0; $i<lenCond; $i++)
		{
			if($condArray[$i])
			{
				$preCond= strtolower($condArray[$i]);
				$preCond = trim($preCond);
				$preCond = str_replace(" ","_",$preCond);
				$preCondDB= mysql_query("SELECT * FROM precondition WHERE ActionName='$actionName' AND Precondition='$preCond'", $con1);
				if($preCondDB);
				else
				{
					mysql_query("INSERT INTO precondition (ActionName, Precondition) VALUES ($actionName, $preCond)", $con1);
				}
				
			}
		}
		// some codes to be added
		
		$flagPre=2;
		// unset the $_POST["addPrecondition"]
		unset($_POST["addPrecondition"]);
	}
	else
	{
		$flagPre= 3;
